{
  "name": "playwright",
  "version": "1.0.0",
  "description": "test automation for lokalise with playwright",
  "private": true,
  "scripts": {
    "test": "npx playwright test",
    "test-chrome": "npx playwright test --project=Chrome",
    "test-firefox": "npx playwright test --project=Firefox",
    "pretty-code": "npx prettier --write .",
    "report": "allure generate --clean && allure serve",
    "record": "npx playwright codegen",
    "eslint": "eslint **/*.ts --ignore-pattern node_modules/ --fix"
  },
  "devDependencies": {
    "@playwright/test": "^1.14.1",
    "@types/faker": "^5.5.3",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "allure-playwright": "^2.0.0-beta.13",
    "axios": "0.21.4",
    "eslint": "^7.32.0",
    "faker": "^5.5.3",
    "log4js": "^6.3.0",
    "playwright": "^1.14.1",
    "prettier": "^2.4.0",
    "typescript": "^4.4.3"
  },
  "prettier": {
    "singleQuote": true
  }
}
